<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="br.com.wildsnow.mercapp.ui.home.CartItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/itemBoughtCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/itemQuantityText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(product.quantity)}"
            app:layout_constraintBaseline_toBaselineOf="@+id/itemBoughtCheckbox"
            app:layout_constraintEnd_toStartOf="@+id/multiplierText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/itemBoughtCheckbox"
            tools:text="TextView"
            tools:visibility="invisible"/>

        <NumberPicker
            android:id="@+id/itemQuantityPicker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/itemBoughtCheckbox"
            app:layout_constraintEnd_toStartOf="@+id/multiplierText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/itemBoughtCheckbox"
            app:layout_constraintTop_toTopOf="@id/itemBoughtCheckbox"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/multiplierText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_item_padding"
            android:text="@string/multiplier_sign"
            app:layout_constraintBaseline_toBaselineOf="@+id/itemQuantityText"
            app:layout_constraintEnd_toStartOf="@+id/itemNameText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/itemQuantityText" />

        <TextView
            android:id="@+id/itemNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_item_padding"
            android:text="@{product.name}"
            android:textAllCaps="true"
            app:layout_constraintBaseline_toBaselineOf="@+id/multiplierText"
            app:layout_constraintEnd_toStartOf="@+id/itemUnitPriceText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/multiplierText"
            tools:text="TextView"
            tools:visibility="invisible"/>

        <EditText
            android:id="@+id/itemNameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="none"
            android:hint="Item name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="@dimen/list_item_padding"
            android:text="@{product.name}"
            android:textAllCaps="true"
            android:textSize="@dimen/textSize"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@+id/multiplierText"
            app:layout_constraintEnd_toStartOf="@+id/itemUnitPriceText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/multiplierText"
            tools:text="TextView"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/itemUnitPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/list_item_padding"
            android:text="@{@string/formatter_currency(product.unitPrice)}"
            app:layout_constraintBaseline_toBaselineOf="@+id/itemNameText"
            app:layout_constraintEnd_toStartOf="@+id/itemTotalPriceText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/itemNameText"
            tools:text="2,99"/>

        <EditText
            android:id="@+id/itemUnitPriceEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="none"
            android:hint="Unit Price"
            android:inputType="numberDecimal"
            android:paddingStart="@dimen/list_item_padding"
            android:text="@{@string/formatter_currency(product.unitPrice)}"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@+id/itemNameText"
            app:layout_constraintEnd_toStartOf="@+id/itemTotalPriceText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/itemNameText"
            tools:text="TextView"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/itemTotalPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginDefault"
            android:paddingStart="@dimen/list_item_padding"
            android:text="@{@string/formatter_currency(product.getTotalPrice())}"
            app:layout_constraintBaseline_toBaselineOf="@+id/itemUnitPriceText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/itemUnitPriceText"
            tools:text="TextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>